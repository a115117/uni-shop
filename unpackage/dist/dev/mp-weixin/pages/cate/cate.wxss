/* 水平间距 */
.scroll-view {
  display: flex;
}
.left {
  width: 120px;
}
.leftitem {
  background-color: #f7f7f7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.leftitem.active {
  background-color: #fff;
  position: relative;
}
.leftitem.active::before {
  content: "";
  display: block;
  width: 3px;
  height: 30px;
  background-color: red;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}

